# BizGro KPI 2.0 Environment Configuration
# ==========================================

# API Configuration
# -----------------
VITE_API_URL=http://localhost:3001
VITE_API_TIMEOUT=30000

# GitHub Pages Detection
# ----------------------
# Set to 'true' when deploying to GitHub Pages
VITE_GITHUB_PAGES=false

# Google OAuth Configuration
# --------------------------
VITE_GOOGLE_CLIENT_ID=your_actual_client_id_here.apps.googleusercontent.com

# Google Sheets Integration
# -------------------------
VITE_GOOGLE_SHEETS_ENABLED=true
VITE_GOOGLE_SHEETS_ID=your_sheet_id_here
VITE_GOOGLE_API_KEY=your_api_key_here

# QuickBooks Online Integration
# -----------------------------
VITE_QBO_CLIENT_ID=your_client_id_here
VITE_QBO_CLIENT_SECRET=your_client_secret_here
VITE_QBO_REDIRECT_URI=http://localhost:5173/api/qbo/callback
VITE_QBO_API_URL=https://api.intuit.com
VITE_QBO_COMPANY_ID=your_company_id_here
VITE_QBO_ENVIRONMENT=sandbox
# Options: sandbox | production

# Feature Flags
# -------------
# Enable/disable features based on your deployment
VITE_FEATURE_QBO_SYNC=true
VITE_FEATURE_GOOGLE_SHEETS=true
VITE_FEATURE_EMAIL_REPORTS=true
VITE_FEATURE_DATA_EXPORT_API=true
VITE_FEATURE_REAL_TIME_SYNC=true
VITE_FEATURE_GOOGLE_AUTH=true

# Authentication Settings
# -----------------------
VITE_AUTH_DEMO_MODE=false
VITE_AUTH_SESSION_TIMEOUT=3600000
# Session timeout in milliseconds (3600000 = 1 hour)

# Application Settings
# --------------------
VITE_APP_NAME="BizGro KPI 2.0"
VITE_APP_VERSION="2.0.0"
VITE_APP_ENVIRONMENT=development
# Options: development | staging | production

# Development Settings
# --------------------
VITE_DEV_PORT=5173
VITE_DEV_HOST=localhost

# Storage Configuration
# ---------------------
VITE_STORAGE_PREFIX=bizgro_kpi_
VITE_STORAGE_VERSION=2

# Logging Configuration
# ---------------------
VITE_LOG_LEVEL=info
# Options: debug | info | warn | error

# CORS Settings (if needed)
# -------------------------
VITE_CORS_ORIGIN=http://localhost:5173

# Demo Data Settings
# ------------------
VITE_DEMO_USER_EMAIL=demo@bizgropartners.com
VITE_DEMO_USER_PASSWORD=kpi2024

# Analytics (optional)
# --------------------
# VITE_GA_TRACKING_ID=
# VITE_MIXPANEL_TOKEN=

# Error Tracking (optional)
# -------------------------
# VITE_SENTRY_DSN=
# VITE_SENTRY_ENVIRONMENT=development

# File Upload Settings
# --------------------
VITE_MAX_FILE_SIZE=10485760
# Max file size in bytes (10485760 = 10MB)

# Export Settings
# ---------------
VITE_EXPORT_FORMATS=csv,xlsx,pdf
VITE_EXPORT_MAX_ROWS=10000

# Cache Settings
# --------------
VITE_CACHE_TTL=300000
# Cache time-to-live in milliseconds (300000 = 5 minutes)

# Performance Settings
# --------------------
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_ENABLE_ERROR_BOUNDARY=true

# Security Settings
# -----------------
VITE_ENABLE_HTTPS=false
VITE_CSP_ENABLED=false

# Backup/Restore Settings
# -----------------------
VITE_ENABLE_BACKUP=true
VITE_BACKUP_INTERVAL=86400000
# Backup interval in milliseconds (86400000 = 24 hours)

# Notes:
# ------
# 1. All environment variables must start with VITE_ to be accessible in the app
# 2. Never commit sensitive values (secrets, keys) to version control
# 3. Create a .env.local file for local overrides that won't be committed
# 4. For GitHub Pages deployment, set VITE_GITHUB_PAGES=true
# 5. For production, ensure all "your_xxx_here" placeholders are replaced with actual values
